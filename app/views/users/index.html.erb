<h1>ユーザーリスト</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>リプレイバンクID</th>
      <th>メール</th>
      <th>名前</th>
      <th>画像</th>
      <th>生まれ年</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.unique_name %></td>
        <td><%= user.mail %></td>
        <td><%= user.name %></td>
        <td><%= image_tag user.image_url(:thumb), width: '50px' %></td>
        <td><%= user.birth_year %></td>
        <td>
          <div class="btn-group">
            <%= link_to '詳細', user, class: 'btn btn-xs btn-default' %>
            <%= link_to '編集', edit_user_path(user), class: 'btn btn-xs btn-default' %>
            <%= link_to '削除', user, method: :delete, data: { confirm: 'ほんとに消すのん？' }, class: 'btn btn-xs btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-lg btn-primary" %>
